{
  "name": "lightspring-ts",
  "version": "0.1.0",
  "description": "A lightweight, high-performance backend framework for Node.js and TypeScript, inspired by Spring Boot.",
  "main": "dist/application.js",
  "scripts": {
    "start": "node dist/application.js",
    "dev": "ts-node-dev --respawn --watch src/controllers,src/services,src/models,src/dtos src/application.ts",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint \"src/**/*.ts\" \"framework/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"framework/**/*.ts\" --fix",
    "format": "prettier --write src/**/*.ts",
    "cli": "node lightspringts-cli/index.js"
  },
  "keywords": [
    "typescript",
    "nodejs",
    "framework",
    "backend",
    "fastify",
    "microservices",
    "spring-boot-alternative"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/amqplib": "^0.10.7",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.9",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "sequelize-cli": "^6.6.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@apollo/server": "^4.12.2",
