    "@fastify/rate-limit": "^9.1.0",
    "@fastify/static": "^6.0.0",
    "@fastify/swagger": "^8.0.0",
    "@fastify/swagger-ui": "^4.0.0",
    "@types/express": "^5.0.3",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.8",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
